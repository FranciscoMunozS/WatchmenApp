<h3 class="h3 mb-2 text-gray-800">Inicio sistema registros de garantia</h3>
<hr>
<div class="row">
  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card border-left-success shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Registros(Garantias)</div>
            <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @tickets.count %></div>
          </div>
          <div class="col-auto">
            <i class="fas fa-receipt fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card border-left-primary shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Proveedores</div>
            <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @providers.count %></div>
          </div>
          <div class="col-auto">
            <i class="fas fa-users fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card border-left-danger shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">Bancos</div>
            <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @banks.count %></div>
          </div>
          <div class="col-auto">
            <i class="fas fa-university fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card border-left-warning shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Usuarios</div>
            <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @users.count %></div>
          </div>
          <div class="col-auto">
            <i class="fas fa-user fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xl-8 col-lg-7">
    <div class="card shadow mb-4">
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-success">Total de garantias registradas en los ultimos 4 meses</h6>
      </div>
      <div class="card-body">
        <div class="chart-area">
          <%= column_chart Ticket.group_by_year(:due_date).count, width: "1024px", height: "320px", messages: {empty: "Sin datos"} %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-xl-4 col-lg-7">
    <div class="card shadow mb-4">
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Total de proveedores registrados en los ultimos 4 meses</h6>
      </div>
      <div class="card-body">
        <div class="chart-area">
          <%= pie_chart Provider.group_by_month(:created_at).count, width: "480px", height: "320px", messages: {empty: "Sin datos"} %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xl-12 col-lg-12">
    <div class="card shadow mb-4 border-left-success">
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between font-weight-bold text-success">
        Garantias
      </div>

      <div class="card-body">
        <%= content_tag :table, role: :datatable, data: { url: tickets_path(format: :json) }, class: 'table table-sm table-bordered text-center' do %>
          <thead>
            <tr>
              <th>Numero correlativo</th>
              <th>Numero memorandum</th>
              <th>Numero garantia</th>
              <th>Proyecto</th>
              <th>Codigo BIP</th>
              <th>Analista</th>
              <th>Opciones</th>
            </tr>
          </thead>
          <tbody>
          </tbody>
        <% end %>
      </div>
    </div>
  </div>
</div>
