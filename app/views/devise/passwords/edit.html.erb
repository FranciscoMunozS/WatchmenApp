<div class="container">
  <div class="row justify-content-center">
    <div class="col-xl-6 col-lg-12 col-md-9">
      <div class="card o-hidden border-0 shadow-lag my-5">
        <div class="card-body p-0">
          <div class="row">
            <div class="col-lg-12">
              <div class="p-5">
                <div class="text-center">
                  <h1 class="h4 text-gray-900 mb-4">Cambio de contrase単a</h1>
                </div>
                <hr>
                <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                  <%= f.error_notification %>

                  <%= f.input :reset_password_token, as: :hidden %>
                  <%= f.full_error :reset_password_token %>

                  <div class="form-inputs">
                    <%= f.input :password,
                                label: "Nueva contrase単a",
                                required: true,
                                autofocus: true,
                                hint: ("#{@minimum_password_length} caracteres como minimo" if @minimum_password_length),
                                input_html: { autocomplete: "new-password" } %>
                    <%= f.input :password_confirmation, label: "Confirme su nueva contrase単a", required: true %>
                  </div>

                  <div class="form-actions">
                    <%= f.button :submit, "Cambiar contrase単a", class: 'btn btn-primary btn-sm btn-block' %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
