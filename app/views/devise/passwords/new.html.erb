<div class="container">
  <div class="row justify-content-center">
    <div class="col-xl-6 col-lg-12 col-md-9">
      <div class="card o-hidden border-0 shadow-lag my-5">
        <div class="card-body p-0">
          <div class="row">
            <div class="col-lg-12">
              <div class="p-5">
                <div class="text-center">
                  <h1 class="h4 text-gray-900 mb-4">¿Olvido su contraseña?</h1>
                </div>
                <hr>
                <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                  <%= f.error_notification %>

                  <div class="form-inputs">
                    <%= f.input :email,
                                required: true,
                                label: 'Correo electronico',
                                autofocus: true,
                                input_html: { autocomplete: "email" } %>
                  </div>

                  <div class="form-actions">
                    <%= f.button :submit, "Enviar instrucciones para restablecer la contraseña", class: "btn btn-primary btn-sm btn-block" %>
                    <div class="text-center">
                      <%= link_to 'Cancelar', new_session_path(resource_name) %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
