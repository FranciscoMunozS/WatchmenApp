    <% if user_signed_in? %>
      <%= render 'assets/sidebar' %>
    <% end %>
    <div id="content-wrapper" class="d-flex flex-column">
      <div id="content">
        <% if user_signed_in? %>
          <%= render 'assets/navbar' %>
        <% end %>
        <div class="container-fluid">
          <%= render 'assets/alert' %>
          <%= yield %>
          <% if user_signed_in? %>
            <%= render 'assets/fab' %>
          <% end %>
        </div>
      </div>
    </div>
  </body>
