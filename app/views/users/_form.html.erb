<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <div class="row">
      <div class="col-md-12">
        <%= f.input :email, label: "Correo electronico" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <% if params[:action] == "edit" %>
          <%= f.input :password, label: "Contraseña", hint: "Dejar en blanco para no realizar modificaciones" %>
        <% else %>
          <%= f.input :password, label: "Contraseña" %>
        <% end %>
      </div>
      <div class="col-md-6">
        <%= f.input :password_confirmation, label: "Confirmar contraseña" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <%= f.association :roles, as: :check_boxes, collection: Role.all, label: "Roles de usuario" %>
      </div>
    </div>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary btn-sm' %>
    <%= link_to 'Cancelar', users_path, class: 'btn btn-secondary btn-sm' %>
  </div>
<% end %>
