<div class="row">
  <div class="col-md-6 text-left">
    <%= link_to 'Agregar nuevo banco', new_bank_path, class: 'btn btn-danger btn-sm' %>
  </div>
</div>

<br>

<div class="card shadow mb-4 border-left-danger">
  <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between font-weight-bold text-danger">
    Bancos
  </div>
  <div class="card-body">
    <table class="table table-bordered text-center" id="dttb">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Opciones</th>
        </tr>
      </thead>

      <tbody>
        <% @banks.each do |bank| %>
          <tr>
            <td><%= bank.name %></td>
            <td>
              <%= link_to bank, class: 'btn btn-primary btn-sm' do %>
                <% icon('fas', 'eye') %>
              <% end %>
              <%= link_to edit_bank_path(bank), class: 'btn btn-success btn-sm' do %>
                <% icon('fas', 'edit') %>
              <% end %>
              <%= link_to bank, method: :delete, data: { confirm: 'Esta seguro?' }, class: 'btn btn-danger btn-sm' do %>
                <% icon('fas', 'trash-alt') %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
